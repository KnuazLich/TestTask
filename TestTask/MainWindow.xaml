<Window x:Name="name" x:Class="TestTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Height="20" VerticalAlignment="Top" Command="{Binding NewWindAdd}">Добавить новую книгу</Button>
        <Button Height="20" Margin="0 20 0 0" VerticalAlignment="Top" Command="{Binding CloseWindow }" CommandParameter="{Binding ElementName=name}" Content="Закрыть" />
        <Button Height="20" Margin="0 40 0 0" VerticalAlignment="Top" Command="{Binding Remove}" CommandParameter="{Binding SelectedBook}">Удалить книгу</Button>
        <Button Height="20" Margin="0 60 0 0" VerticalAlignment="Top" Command="{Binding NewWindChange}" CommandParameter="{Binding SelectedBook}">Редактировать информацию о книге</Button>
        <Button Height="20" Margin="0 80 0 0" VerticalAlignment="Top" Command="{Binding GiveBook}" CommandParameter="{Binding SelectedBook}">Выдать книгу студенту</Button>
        <Button Height="20" Margin="0 100 0 0" VerticalAlignment="Top" Command="{Binding ReturnBook}" CommandParameter="{Binding SelectedBook}">Получить книгу у студента</Button>
        <DataGrid VerticalAlignment="Top" Height="209" ItemsSource="{Binding Books}" SelectedItem="{Binding SelectedBook}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,225,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Инв. №" Binding="{Binding Path=InvNumber}" Width="0.5*" />
                <DataGridTextColumn Header="Название" Binding="{Binding Path=BookName}" Width="0.7*" />
                <DataGridTextColumn Header="Автор(ы)" Binding="{Binding Path=Authors}" Width="0.6*" />
                <DataGridTextColumn Header="Год издания" Binding="{Binding Path=Year}" Width="0.6*" />
                <DataGridTextColumn Header="Дата поступления" Binding="{Binding Path=EntranceDate}" Width="0.9*" />
                <DataGridTextColumn Header="Дата выдачи студенту" Binding="{Binding Path=IssueDateDate}" Width="0.9*" />
                <DataGridTextColumn Header="Ф.И.О. студента" Binding="{Binding Path=FullName}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <CheckBox x:Name="chek" Height="20" Margin="0 120 0 0" VerticalAlignment="Top" Command="{Binding ChuseGivenBooks}" CommandParameter="{Binding ElementName=chek}"></CheckBox>
    </Grid>
</Window>
